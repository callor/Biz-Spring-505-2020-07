<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
  
  <tiles-definitions>
  		<definition name="home" template="/WEB-INF/views/layout.jsp">
  			<put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
  			<put-attribute name="nav"  value="/WEB-INF/views/layout/nav.jsp"/>
  			<put-attribute name="content"  value="/WEB-INF/views/home.jsp"/>
  			<put-attribute name="footer"  value="/WEB-INF/views/layout/footer.jsp"/>
  		</definition>
  		
  		<definition name="/*/*" extends="home">
  			<put-attribute name="content"  
  					value="/WEB-INF/views/{1}/{2}.jsp"/>
  		</definition>

  		<definition name="bbs/*/*" extends="home">
  			<put-attribute name="content"  
  					value="/WEB-INF/views/bbs/{1}/{2}.jsp"/>
  		</definition>


  		
  		
  </tiles-definitions>
  
  
  
  